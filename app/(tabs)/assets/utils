import * as Notifications from "expo-notifications";
import * as Device from "expo-device";
import sarbatori from "../../constants/sarbatori";

export async function setupNotificationsHelper() {
  if (!Device.isDevice) {
    console.log("âš ï¸ NotificÄƒrile funcÈ›ioneazÄƒ doar pe dispozitive reale.");
    return;
  }

  const { status: existingStatus } = await Notifications.getPermissionsAsync();
  let finalStatus = existingStatus;

  if (existingStatus !== "granted") {
    const { status } = await Notifications.requestPermissionsAsync();
    finalStatus = status;
  }

  if (finalStatus !== "granted") {
    console.log("ğŸ“µ Permisiunea pentru notificÄƒri a fost refuzatÄƒ.");
    return;
  }

  Notifications.setNotificationHandler({
    handleNotification: async () => ({
      shouldShowAlert: true,
      shouldPlaySound: true,
      shouldSetBadge: false,
    }),
  });

  console.log("âœ… NotificÄƒrile sunt configurate corect.");
}

export async function programareNotificariZilnice() {
  const azi = new Date();
  const aziString = azi.toISOString().split("T")[0]; // format YYYY-MM-DD

  if (sarbatori && sarbatori[aziString]) {
    const detalii = sarbatori[aziString];
    await Notifications.scheduleNotificationAsync({
      content: {
        title: "ğŸ™ AstÄƒzi este sÄƒrbÄƒtoare",
        body: `${detalii.sarbatoare}${detalii.cruce ? " âœï¸ (cu cruce roÈ™ie)" : ""}`,
        sound: true,
      },
      trigger: null,
    });
    console.log("ğŸ“© Notificare trimisÄƒ pentru sÄƒrbÄƒtoarea de azi.");
  } else {
    console.log("ğŸ“… AstÄƒzi nu este sÄƒrbÄƒtoare.");
  }
}
